{
  "type": "object",
  "title": "SFTP / FTP writer",
  "required": [
    "path",
    "append_date",
    "append_date_format"
  ],
  "properties": {
    "path": {
      "type": "string",
      "title": "Remote destination path",
      "description": "e.g. /home/user/sftp/",
      "propertyOrder": 60
    },
    "append_date": {
      "type": "number",
      "title": "Append timestamp",
      "description": "Appends timestamp to result file name",
      "propertyOrder": 5200,
      "enum": [
        0,
        1
      ],
      "default": 0,
      "options": {
        "enum_titles": [
          "No",
          "Yes"
        ]
      }
    },
    "append_date_format": {
      "type": "string",
      "title": "Date format of appended timestamp",
      "description": "Date format as used in strftime() function",
      "propertyOrder": 5300,
      "options": {
        "dependencies": {
          "append_date": 1
        }
      },
      "default": "%Y%m%d%H%M%S"
    }
  }
}
